              div
                button(name='getuserloing' , value='getuserloing')
          else
            form(name='login', method='POST', action='login')
              div 
                lable(for='email') Email
                input(name='email', type='email', placeholder='youremail@email.com')
              div
                lable(for='password') Email
                input(name='password', type='password', placeholder='password')
              div
                input(name='remember', type='checkbox', value='remember') 
